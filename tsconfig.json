{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": false,
    "esModuleInterop": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.js"]
}
